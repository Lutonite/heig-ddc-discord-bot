{
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext", "dom"],
    "strict": true,
    "outDir": "build",
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
